@page
@model ITShop.Pages.Adminitration.AdminUser.ListUserModel
@{
    ViewData["Title"] = "ListUser";
}

<h2>User management</h2>

@if (!Model.Users.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table">
        <tr>
            <th>User ID</th>
            <th>User name</th>
            <th>Email</th>
            <th>Membership</th>
            <th>Actions</th>
        </tr>

        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Membership?.Type</td>
                <td class="row">
                    <a class="btn btn-sm btn-primary" asp-page="./EditUser" asp-route-id="@user.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form asp-page-handler="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" onclick="return confirm('Do you really want to delete this user?');" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}

<p>
    <a class="btn btn-primary" asp-page="./AddUser">Add new user</a>
</p>


