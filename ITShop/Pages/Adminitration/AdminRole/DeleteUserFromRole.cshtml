@page
@model ITShop.Pages.Adminitration.AdminRole.DeleteUserFromRoleModel
@{
    ViewData["Title"] = "DeleteUserFromRole";
}

<h2>Delete user from role</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.Role.Id" />
    <div class="form-group">
        <label asp-for="@Model.Names" class="control-label"></label>
        <div class="col-md-offset-2 col-md-10">
            <select asp-for="@Model.Name" asp-items="@(new SelectList(Model.Names, "UserName"))" class="form-control">
                <option value="">Please select a user</option>
            </select>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-primary" type="submit">Remove from role</button>
            <a asp-page="./EditRole" asp-route-roleId="@Model.Role.Id" class="btn btn-primary">Done</a>
        </div>
    </div>

</form>

