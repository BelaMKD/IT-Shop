@page
@model ITShop.Pages.Adminitration.AdminRole.EditRoleModel
@{
    ViewData["Title"] = "EditRole";
}

<h2>Edit role</h2>

<form asp-controller="AdminRole" asp-action="EditRole" method="post" class="form-horizontal" role="form">
    <h4>You can change the role details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Role.Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Role.Id" class="form-control" readonly="readonly" />
            <span asp-validation-for="Role.Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Role.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Role.Name" class="form-control" />
            <span asp-validation-for="Role.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save role" />
            <a asp-page="./ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

<h3>Users in this role</h3>
<ul>
    @foreach (var user in Model.Names)
    {
        <li>
            @user
        </li>
    }
</ul>

<a asp-page="./AddUserToRole" asp-route-roleId="@Model.Role.Id" class="btn btn-primary">Add users to role</a>
<a asp-page="./DeleteUserFromRole" asp-route-roleId="@Model.Role.Id" class="btn btn-primary">Remove users from role</a>

