@page
@model ITShop.Pages.Adminitration.AdminRole.ListRolesModel
@{
    ViewData["Title"] = "ListRoles";
}

<h2 style="margin-top:2em">Role management</h2>

<div asp-validation-summary="All" class="text-danger"></div>

@if (!Model.Roles.Any())
{
    <tr><td colspan="3" class="text-center" style="margin-top:20px">No roles defined yet. Please create the first role.</td></tr>
}
else
{
    <table class="table table-condensed table-bordered" style="margin-top:20px">
        <tr>
            <th>Role ID</th>
            <th>Role name</th>
            <th>Actions</th>
        </tr>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td class="d-flex">
                    <a class="btn btn-sm btn-primary" asp-page="EditRole" asp-route-roleId="@role.Id" style="margin-right:5px">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form method="post">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Do you really want to delete this role?');" asp-route-roleId="@role.Id">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<p>
    <a class="btn btn-success" asp-page="./AddRole">Add new role</a>
</p>

