@page
@model ITShop.Pages.Adminitration.AdminRole.ListRolesModel
@{
    ViewData["Title"] = "ListRoles";
}

<h2>Role management</h2>

@if (!Model.Roles.Any())
{
    <tr><td colspan="3" class="text-center">No roles defined yet. Please create the first role.</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Role ID</th>
            <th>Role name</th>
            <th>#Users</th>
        </tr>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form method="post">
                        <a class="btn btn-sm btn-primary" asp-page="EditRole" asp-route-roleId="@role.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Do you really want to delete this role?');" asp-route-roleId="@role.Id">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<p>
    <a class="btn btn-primary" asp-page="./AddRole">Add new role</a>
</p>

