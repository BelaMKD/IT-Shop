@page
@model ITShop.Pages.Adminitration.AdminRole.AddRoleModel
@{
    ViewData["Title"] = "AddRole";
}

<h2>Create a new role</h2>

<form method="post" class="form-horizontal">
    <h4>Enter the role details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Role.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Role.Name" class="form-control" />
            <span asp-validation-for="Role.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Create role" />
            <a asp-page="./ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

