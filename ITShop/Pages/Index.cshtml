@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var imagePath = "~/images/image700x400/700x400.png";
}

@section Styles{
    <link href="~/css/index.css" rel="stylesheet" />
 }

@section Index{
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active" style="background-image: url('/images/cover/cover1.jpg')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>First Slide</h3>
                        <p>This is a description for the first slide.</p>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('/images/cover/cover2.jpg')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Second Slide</h3>
                        <p>This is a description for the second slide.</p>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('/images/cover/cover3.jpg')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Third Slide</h3>
                        <p>This is a description for the third slide.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>
}

<div class="headerND">
    <h1 class="my-4">New Products</h1>
</div>

<div class="row">


    @foreach (var product in Model.NewProducts)
    {
        if (product.ImagePath != null)
        {
            imagePath = product.ImagePath;
        }
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="product-grid3">
            <div class="product-image3">
                <a asp-page="/Products/Detail" asp-route-id="@product.Id">
                    <img class="pic-1" src="@imagePath" asp-append-version="true">
                </a>
                <ul class="social">
                    <li><a asp-page="/Products/Detail" asp-route-id="@product.Id"><i class="fa fa-eye"></i></a></li>
                    <li><a asp-page="/Cart/ShoppingCart" asp-route-id="@product.Id" asp-page-handler="Buy"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
                <span class="product-new-label">New</span>
            </div>
            <div class="product-content">
                <h3 class="title"><a href="#">@product.Name</a></h3>
                <div class="price">
                    @product.TotalPrice.ToString("C")
                    @if (product.Discount != 0)
                    {
                        <span class="oldPrice">@product.Price.ToString("C")</span>
                        <span class="discountPercent">-@(product.Discount*100)%</span>
                    }
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @Model.CalculateProgressBar(product.Quantity)%" aria-valuenow="@Model.CalculateProgressBar(product.Quantity)" aria-valuemin="0" aria-valuemax="100">@Model.CalculateProgressBar(product.Quantity)%</div>
                </div>
            </div>
        </div>
    </div>
    }
</div>


<div class="headerND">
    <h1 class="my-4">Discounted products</h1>
</div>

<div class="row">

    @foreach (var product in Model.DiscountedProducts)
    {
        if (product.ImagePath != null)
        {
            imagePath = product.ImagePath;
        }
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="product-grid3">
                <div class="product-image3">
                    <a asp-page="/Products/Detail" asp-route-id="@product.Id">
                        <img class="pic-1" src="@imagePath" asp-append-version="true">
                    </a>
                    <ul class="social">
                        <li><a asp-page="/Products/Detail" asp-route-id="@product.Id"><i class="fa fa-eye"></i></a></li>
                        <li><a asp-page="/Cart/ShoppingCart" asp-route-id="@product.Id" asp-page-handler="Buy"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="#">@product.Name</a></h3>
                    <div class="price">
                        @product.TotalPrice.ToString("C")
                        @if (product.Discount != 0)
                        {
                            <span class="oldPrice">@product.Price.ToString("C")</span>
                            <span class="discountPercent">-@(product.Discount*100)%</span>
                        }
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: @Model.CalculateProgressBar(product.Quantity)%" aria-valuenow="@Model.CalculateProgressBar(product.Quantity)" aria-valuemin="0" aria-valuemax="100"></div>
                        <span class="percent">&emsp;@Model.CalculateProgressBar(product.Quantity) %</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
}
