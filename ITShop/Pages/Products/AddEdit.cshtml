@page
@model ITShop.AddEditModel
@{
    ViewData["Title"] = "AddEdit";
}


<form method="post" enctype="multipart/form-data">
    @if (Model.Product.Id == 0)
    {
        <h1>Add New Product</h1>
    }
    else
    {
        <h1>Edit @Model.Product.Name</h1>
        <input type="hidden" asp-for="ImgPath" />
    }


    <input type="hidden" asp-for="Product.Id" />
    <div class="row">
        <div class="col">
            <label asp-for="Product.Name"></label>
            <input class="form-control" asp-for="Product.Name">
            <span asp-validation-for="Product.Name" class="text-danger"></span>

        </div>
        <div class="col">
            <label asp-for="Product.Description"></label>
            <textarea class="form-control" asp-for="Product.Description" rows="3"></textarea>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="Product.Discount"></label>
            <input class="form-control" asp-for="Product.Discount">
            <span asp-validation-for="Product.Discount" class="text-danger"></span>

        </div>
        <div class="col">
            <label asp-for="Product.Price"></label>
            <input class="form-control" asp-for="Product.Price">
            <span asp-validation-for="Product.Price" class="text-danger"></span>

        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Product.Quantity"></label>
            <input class="form-control" asp-for="Product.Quantity">
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>

        </div>
        <div class="col">
            <label asp-for="Product.CategoryId"></label>
            <select class="form-control" asp-for="Product.CategoryId" asp-items="Model.CategoryTypes">
                <option value="">...Select...</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

        </div>
    </div>
    <div class="row">
        <div class="custom-file col">
            <input type="file" class="custom-file-input" id="customFile" name="file" />
            <label class="custom-file-label" style="margin: 1.3% 0 0 1.3%; width:97.3%">Choose file</label>
        </div>
    </div>
    <button class="btn btn-success" type="submit" style="margin-top:2%">Save</button>
</form>

@section Scripts{
    <script>
        document.querySelector('.custom-file-input').addEventListener('change', function (e) {
            var fileName = document.getElementById("customFile").files[0].name;
            var nextSibling = e.target.nextElementSibling
            nextSibling.innerText = fileName
        })
    </script>
}